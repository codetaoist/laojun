# Development environment example
# Copy to .env.development and adjust values for local dev

# Server
GIN_MODE=debug
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=laojun_dev
DB_SSLMODE=disable
DB_MAX_OPEN_CONN=25
DB_MAX_IDLE_CONN=25
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT / Security
JWT_SECRET=dev-secret-change-me
JWT_ISSUER=laojun
JWT_AUDIENCE=laojun-users
JWT_EXPIRE_HOURS=72
ENABLE_CAPTCHA=false
CORS_ALLOW_ORIGINS=*

# Rate limit
RATE_LIMIT_ENABLED=false
RATE_LIMIT_GLOBAL_REQUESTS=100
RATE_LIMIT_GLOBAL_WINDOW=1m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=both
LOG_FILE=./logs/dev-app.log

# Marketplace
MARKETPLACE_DEFAULT_CATEGORY=general

# Misc
APP_ENV=development