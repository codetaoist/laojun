# 太上老君系统 - 预发布环境配置

# 应用配置
APP_ENV=staging
APP_DEBUG=false
APP_PORT=8080

# 数据库配置
DB_HOST=postgres
DB_PORT=5432
DB_NAME=laojun_staging
DB_USER=laojun_user
DB_PASSWORD=your_staging_db_password
DB_SSL_MODE=require

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_staging_redis_password
REDIS_DB=0

# JWT配置
JWT_SECRET=your_jwt_secret_key_for_staging
JWT_EXPIRES_IN=12h

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=/app/uploads

# 邮件配置
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS=noreply@laojun-staging.com
MAIL_FROM_NAME="太上老君系统(预发布)"

# 缓存配置
CACHE_DRIVER=redis
CACHE_TTL=7200

# 队列配置
QUEUE_DRIVER=redis
QUEUE_NAME=laojun_staging

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090

# 跨域配置
CORS_ALLOWED_ORIGINS=https://staging.laojun.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# 插件配置
PLUGIN_DIR=/app/plugins
PLUGIN_AUTO_LOAD=true

# 安全配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60