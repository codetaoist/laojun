# 太上老君系统 - 本地开发环境配置模板
# 复制此文件为 .env.local 并根据需要修改配置

# 应用配置
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=debug

# 服务端口配置（本地直接运行）
CONFIG_CENTER_PORT=8093
ADMIN_API_PORT=8080
MARKETPLACE_PORT=8082

# 数据库配置 - 本地PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=laojun_dev
POSTGRES_USER=laojun
POSTGRES_PASSWORD=laojun123
DB_SSL_MODE=disable

# Redis配置 - 本地Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=laojun-local-dev-secret-key-2024-change-in-production
JWT_EXPIRE_HOURS=24

# 安全配置
SECURITY_ENABLE_CAPTCHA=false
SECURITY_CAPTCHA_TTL=2m

# CORS配置
CORS_ALLOW_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173,http://localhost:8080

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# 日志配置
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30

# 开发工具配置
ENABLE_SWAGGER=true
ENABLE_PPROF=true
ENABLE_METRICS=true

# 数据库连接池配置
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m