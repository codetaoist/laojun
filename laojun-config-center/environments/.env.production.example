# Laojun 系统环境配置文件
# 复制此文件为 .env 并根据实际环境修改配置

# ===========================================
# 数据库配置
# ===========================================
POSTGRES_DB=laojun
POSTGRES_USER=laojun
POSTGRES_PASSWORD=laojun123
DB_SSL_MODE=disable

# ===========================================
# Redis 配置
# ===========================================
REDIS_PASSWORD=redis123

# ===========================================
# 应用配置
# ===========================================
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info

# ===========================================
# JWT 安全配置
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE_HOURS=24

# ===========================================
# 安全配置
# ===========================================
SECURITY_ENABLE_CAPTCHA=false
SECURITY_CAPTCHA_TTL=2m

# ===========================================
# CORS 配置
# ===========================================
CORS_ALLOW_ORIGINS=*

# ===========================================
# 服务端口配置
# ===========================================
# 配置中心端口
CONFIG_CENTER_PORT=8081

# 管理API端口
ADMIN_API_PORT=8080

# 插件市场API端口
MARKETPLACE_API_PORT=8082

# Nginx前端服务端口
NGINX_MARKETPLACE_PORT=80
NGINX_ADMIN_PORT=8888

# ===========================================
# 部署配置
# ===========================================
# Docker网络子网
DOCKER_SUBNET=172.20.0.0/16

# 资源限制
POSTGRES_MEMORY_LIMIT=512M
POSTGRES_MEMORY_RESERVATION=256M
REDIS_MEMORY_LIMIT=256M
REDIS_MEMORY_RESERVATION=128M