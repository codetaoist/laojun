# 太上老君系统 - Docker环境配置
# 用于Docker Compose部署

# 应用配置
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=info

# Docker服务端口映射
# 基础设施服务端口
POSTGRES_PORT=5432
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# 开发工具端口
ADMINER_PORT=8090
REDIS_COMMANDER_PORT=8091

# 应用服务端口（如果在Docker中运行）
CONFIG_CENTER_PORT=8093
ADMIN_API_PORT=8080
MARKETPLACE_PORT=8082

# 数据库配置 - Docker内部连接
POSTGRES_HOST=postgres
POSTGRES_DB=laojun_dev
POSTGRES_USER=laojun
POSTGRES_PASSWORD=laojun123
DB_SSL_MODE=disable

# Redis配置 - Docker内部连接
REDIS_HOST=redis
REDIS_PASSWORD=redis123
REDIS_DB=0

# JWT配置
JWT_SECRET=laojun-docker-dev-secret-key-2024
JWT_EXPIRE_HOURS=24

# 安全配置
SECURITY_ENABLE_CAPTCHA=false
SECURITY_CAPTCHA_TTL=2m

# CORS配置
CORS_ALLOW_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=/app/uploads

# 日志配置
LOG_PATH=/app/logs

# 邮件配置（Docker环境）
MAIL_DRIVER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=dev@laojun.docker
MAIL_FROM_NAME="太上老君系统-Docker开发"

# 缓存配置
CACHE_DRIVER=redis
CACHE_TTL=3600

# 队列配置
QUEUE_DRIVER=redis
QUEUE_NAME=laojun_docker

# MinIO配置（Docker环境）
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=laojun-docker

# InfluxDB配置（Docker环境）
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=
INFLUXDB_ORG=laojun-docker
INFLUXDB_BUCKET=metrics-docker