# Staging environment example
# Copy to .env.staging and set values for staging cluster

# Server
GIN_MODE=release
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database
DB_DRIVER=postgres
DB_HOST=<staging-db-host>
DB_PORT=5432
DB_USER=<staging-db-user>
DB_PASSWORD=<staging-db-password>
DB_NAME=<staging-db-name>
DB_SSLMODE=require
DB_MAX_OPEN_CONN=50
DB_MAX_IDLE_CONN=25
DB_CONN_MAX_LIFETIME=10m

# Redis
REDIS_HOST=<staging-redis-host>
REDIS_PORT=6379
REDIS_PASSWORD=<staging-redis-password>
REDIS_DB=0

# JWT / Security
JWT_SECRET=<strong-secret>
JWT_ISSUER=laojun
JWT_AUDIENCE=laojun-users
JWT_EXPIRE_HOURS=72
ENABLE_CAPTCHA=true
CORS_ALLOW_ORIGINS=<your-domain>

# Rate limit
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_REQUESTS=500
RATE_LIMIT_GLOBAL_WINDOW=1m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE=/var/log/laojun/app.log

# Marketplace
MARKETPLACE_DEFAULT_CATEGORY=general

# Misc
APP_ENV=staging